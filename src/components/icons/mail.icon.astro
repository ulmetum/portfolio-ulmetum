---
interface Props {
  size?: 'xs' | 'sm' | 'md' | 'lg'
  color?: 'alternative' | 'dark'
}

const { size = 'sm', color = 'dark' } = Astro.props

const colors = {
  alternative: '#b45309',
  dark: '#18181b',
}
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width="24"
  height="24"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class:list={[
    'group icon icon-tabler icons-tabler-outline icon-tabler-mail transition-transform duration-300 ease-[var(--ease-elastic-smoother)] hover:scale-[120%]',
    {
      'h-5 w-5': size === 'xs',
      'h-7 w-7': size === 'sm',
      'h-8 w-8': size === 'md',
      'h-10 w-10': size === 'lg',
    },
  ]}
  class=""
  ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
    class="group-hover:stroke-primary transition-all duration-300"
    d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
