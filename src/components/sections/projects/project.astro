---
import type { InferEntrySchema } from 'astro:content'

import BadgeTag from '@/components/badge-tag.astro'
import Buttons from '@/components/sections/projects/buttons.astro'

interface Props {
  data: InferEntrySchema<'projects'>
}

const { data } = Astro.props
---

<article class="group flex flex-col gap-y-8 md:flex-row md:gap-x-8">
  <div class="md:w-1/2 sm:h-full overflow-hidden rounded-xl">
    <img
      class="transition duration-500 scale-115 group-hover:scale-105 rounded-xl overflow-hidden h-56 w-full object-cover object-center"
      src={data.featuredImage}
      alt={data.title}
    />
  </div>
  <div class="md:w-1/2">
    <h3 class="font-bold m-0 xl:text-3xl">{data.title}</h3>
    <div class="mt-2 space-y-2">
      <div class="flex flex-wrap gap-2">
        {data.tags.map((tag) => <BadgeTag text={tag} />)}
      </div>
      <p class="">{data.description}</p>
      <Buttons data={data} />
    </div>
  </div>
</article>
